<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.person.activity.RegisterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_98_DP"
        android:layout_marginTop="@dimen/DIMEN_WIDTH_20_DP"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/DIMEN_WIDTH_60_DP"
            android:layout_height="@dimen/DIMEN_WIDTH_60_DP"
            android:src="@mipmap/iv_back"
            android:layout_marginLeft="@dimen/DIMEN_WIDTH_32_DP"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvTilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新用户注册"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/DIMEN_TEXT_40_SP" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_person"
        android:layout_width="@dimen/DIMEN_WIDTH_240_DP"
        android:layout_height="@dimen/DIMEN_WIDTH_240_DP"
        android:src="@mipmap/icon_base"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_WIDTH_56_DP"/>
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_120_DP"
        android:layout_marginTop="@dimen/DIMEN_WIDTH_100_DP"
        android:textSize="@dimen/DIMEN_TEXT_32_SP"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入注册手机号码"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"/>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_120_DP"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP">
        <EditText
            android:id="@+id/etIconCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/DIMEN_TEXT_32_SP"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入图片验证码"/>
        <ImageView
            android:id="@+id/ivIconCode"
            android:layout_width="@dimen/DIMEN_WIDTH_35_DP"
            android:layout_height="@dimen/DIMEN_WIDTH_26_DP"
            android:src="@mipmap/look"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_120_DP"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP">
        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/DIMEN_TEXT_32_SP"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入短信验证码"/>
        <TextView
            android:id="@+id/ivSendNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/text_FF6C2EA5"
            android:textSize="@dimen/DIMEN_TEXT_32_SP"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_120_DP"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"
        android:textSize="@dimen/DIMEN_TEXT_32_SP"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入登录密码"/>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"/>
    <EditText
        android:id="@+id/etPasswordAgain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_120_DP"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"
        android:textSize="@dimen/DIMEN_TEXT_32_SP"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请再次确认登录密码"/>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginTop="@dimen/DIMEN_WIDTH_44_DP">
        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="@dimen/DIMEN_WIDTH_24_DP"
            android:layout_height="@dimen/DIMEN_WIDTH_24_DP"
            android:button="@null"
            android:background="@drawable/selector_register_agreement"
            android:checked="false"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意《用户服务协议》"
            android:textColor="@color/text_FF6C2EA5"
            android:textSize="@dimen/DIMEN_TEXT_24_SP"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/DIMEN_WIDTH_10_DP"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_100_DP"
        android:layout_gravity="center_horizontal"
        android:text="注册&amp;登录"
        android:textSize="@dimen/DIMEN_TEXT_32_SP"
        android:layout_marginTop="@dimen/DIMEN_WIDTH_116_DP"
        android:textColor="@color/text_FFBBBBBB"
        android:background="@drawable/register_login"
        android:gravity="center"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP" />

</LinearLayout>