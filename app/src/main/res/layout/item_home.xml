<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp">
    <RelativeLayout
        android:id="@+id/rlTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="39dp"
            android:layout_height="39dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/icon_base" />
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_person"
            android:text="苏南心"
            android:textSize="16sp"
            android:textColor="@color/text_333333"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/tvCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_person"
            android:layout_below="@+id/tvName"
            android:text="乐融资本|高级投资经理"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/tvCapital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="200~1000万"
            android:textSize="12sp"
            android:layout_alignTop="@+id/tvName"
            android:textColor="@color/text_333333"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCompany"
            android:layout_alignLeft="@+id/tvCompany"
            android:orientation="horizontal"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tvCase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rcType"
            android:layout_alignLeft="@+id/tvCompany"
            android:text="投资案例：猫眼咖啡、爵士板鞋"
            android:textSize="12sp"
            android:textColor="@color/text_999999"
            android:layout_marginTop="7dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/tvCompany"
            android:layout_below="@+id/tvCase"
            android:background="@color/text_EEEEEE"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>