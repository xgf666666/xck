<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <View style="@style/LineGray" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/selector_navigation_main"
        app:itemTextColor="@color/selector_navigation_main"
        app:menu="@menu/navigation_main"
        app:itemTextAppearanceActive="@style/bottom_tab_title_active"
        app:itemIconSize="30dp"
        app:itemTextAppearanceInactive="@style/bottom_tab_title_active"
        />

</LinearLayout>