                android:paddingLeft="@dimen/DIMEN_WIDTH_40_DP"
                android:paddingRight="@dimen/DIMEN_WIDTH_40_DP">

                <ImageView
                    android:id="@+id/ivAddress"
                    android:layout_width="@dimen/DIMEN_WIDTH_21_DP"
                    android:layout_height="@dimen/DIMEN_WIDTH_25_DP"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/address" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/DIMEN_WIDTH_24_DP"
                    android:layout_marginTop="@dimen/DIMEN_WIDTH_20_DP"
