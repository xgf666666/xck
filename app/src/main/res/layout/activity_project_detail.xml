            android:gravity="center"
            android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
            android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"
            android:layout_marginTop="@dimen/DIMEN_WIDTH_16_DP"
            android:layout_marginBottom="@dimen/DIMEN_WIDTH_16_DP"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
       android:layout_below="@+id/icTitle"
        android:layout_above="@+id/rlSend"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

