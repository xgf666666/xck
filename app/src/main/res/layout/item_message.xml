<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_person"
            android:layout_width="39dp"
            android:layout_height="39dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/icon_base" />
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_person"
            android:text="陈三毛"
            android:textSize="16sp"
            android:textColor="@color/text_333333"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_person"
            android:layout_below="@+id/tvName"
            android:text="可以的，项目当前的融资情况就是这样子…"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/tvNum"/>
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="22:45"
            android:textSize="12sp"
            android:layout_alignTop="@+id/tvName"
            android:textColor="@color/text_333333"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:maxLines="1"/>
    <TextView
        android:id="@+id/tvNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="22"
        android:textSize="9dp"
        android:layout_alignTop="@+id/tvMessage"
        android:textColor="@color/white"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/message_num"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"/>

</RelativeLayout>