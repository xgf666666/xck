<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.person.activity.LoginActivity">
    <include layout="@layout/ic_title"/>
    <ImageView
        android:id="@+id/iv_person"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_WIDTH_56_DP"/>
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入手机号码"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"/>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入登录密码"
            android:inputType="textPassword" />
        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/close"
            android:layout_toLeftOf="@+id/ivHide"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/ivHide"
            android:layout_width="28dp"
            android:layout_height="23dp"
            android:src="@mipmap/hide"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"/>
    </RelativeLayout>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册新用户"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tvForgetPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tvToLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="立即登录"
        android:textSize="16sp"
        android:layout_marginTop="58dp"
        android:textColor="@color/black"
        android:background="@drawable/prepare_login"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />


</LinearLayout>