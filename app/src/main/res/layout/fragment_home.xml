<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_98_DP"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_WIDTH_66_DP"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@drawable/home_search">
            <ImageView
                android:layout_width="@dimen/DIMEN_WIDTH_34_DP"
                android:layout_height="@dimen/DIMEN_WIDTH_34_DP"
                android:src="@mipmap/search"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/DIMEN_WIDTH_15_DP"/>
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="@dimen/DIMEN_TEXT_28_SP"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_screen"
            android:layout_width="@dimen/DIMEN_WIDTH_48_DP"
            android:layout_height="@dimen/DIMEN_WIDTH_56_DP"
            android:src="@mipmap/screen"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/DIMEN_WIDTH_32_DP"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_280_DP"
        android:layout_marginTop="@dimen/DIMEN_WIDTH_20_DP"
        android:layout_marginBottom="@dimen/DIMEN_WIDTH_20_DP"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>