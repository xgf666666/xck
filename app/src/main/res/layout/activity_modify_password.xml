<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.person.activity.ModifyPasswordActivity">
    <RelativeLayout
        android:id="@+id/rlTiltle"
        android:layout_width="0dp"
        android:layout_height="@dimen/DIMEN_WIDTH_98_DP"
        android:layout_marginTop="@dimen/DIMEN_WIDTH_20_DP"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/DIMEN_WIDTH_60_DP"
            android:layout_height="@dimen/DIMEN_WIDTH_60_DP"
            android:src="@mipmap/iv_back"
            android:layout_marginLeft="@dimen/DIMEN_WIDTH_32_DP"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvTilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新用户注册"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/DIMEN_TEXT_40_SP" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_88_DP"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/rlTiltle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/tvCodeRz"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1、验证手机号码"
            android:textColor="@color/text_FF6C2EA5"
            android:textSize="@dimen/DIMEN_TEXT_24_SP"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tvNewPassdword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2、设置新密码"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/DIMEN_TEXT_24_SP"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:id="@+id/vwLine"
       style="@style/LineGray"
        app:layout_constraintTop_toBottomOf="@+id/llCode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
<LinearLayout
    android:id="@+id/llPhone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/vwLine"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_120_DP"
        android:layout_marginTop="@dimen/DIMEN_WIDTH_50_DP"
        android:textSize="@dimen/DIMEN_TEXT_32_SP"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入注册手机号码"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"/>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_120_DP"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP">
        <EditText
            android:id="@+id/etIconCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/DIMEN_TEXT_32_SP"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入图片验证码"/>
        <ImageView
            android:id="@+id/ivIconCode"
            android:layout_width="@dimen/DIMEN_WIDTH_35_DP"
            android:layout_height="@dimen/DIMEN_WIDTH_26_DP"
            android:src="@mipmap/look"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_120_DP"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP">
        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/DIMEN_TEXT_32_SP"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入短信验证码"/>
        <TextView
            android:id="@+id/ivSendNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/text_FF6C2EA5"
            android:textSize="@dimen/DIMEN_TEXT_32_SP"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_100_DP"
        android:layout_gravity="center_horizontal"
        android:text="下一步"
        android:textSize="@dimen/DIMEN_TEXT_32_SP"
        android:layout_marginTop="@dimen/DIMEN_WIDTH_116_DP"
        android:textColor="@color/text_FFBBBBBB"
        android:background="@drawable/register_login"
        android:gravity="center"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/llPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/vwLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone">
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_WIDTH_120_DP"
            android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
            android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"
            android:textSize="@dimen/DIMEN_TEXT_32_SP"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入设置登录密码"/>
        <View
            style="@style/LineGray"
            android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
            android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"/>
        <EditText
            android:id="@+id/etPasswordAgain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_WIDTH_120_DP"
            android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
            android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"
            android:textSize="@dimen/DIMEN_TEXT_32_SP"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请再次确认登录密码"/>
        <View
            style="@style/LineGray"
            android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
            android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"/>
        <TextView
            android:id="@+id/tvSendLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_WIDTH_100_DP"
            android:layout_gravity="center_horizontal"
            android:text="提交%登录"
            android:textSize="@dimen/DIMEN_TEXT_32_SP"
            android:layout_marginTop="@dimen/DIMEN_WIDTH_116_DP"
            android:textColor="@color/black"
            android:background="@drawable/prepare_login"
            android:gravity="center"
            android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
            android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>