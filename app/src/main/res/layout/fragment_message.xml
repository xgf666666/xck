<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.message.MessageFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP">
    <TextView
        android:id="@+id/tvCommunicate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="沟通中"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/DIMEN_TEXT_34_SP" />
        <TextView
            android:id="@+id/tvCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打招呼"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/DIMEN_TEXT_38_SP"
            android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_WIDTH_66_DP"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/home_search"
        android:layout_marginLeft="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginRight="@dimen/DIMEN_WIDTH_40_DP"
        android:layout_marginTop="@dimen/DIMEN_WIDTH_30_DP">
        <ImageView
            android:layout_width="@dimen/DIMEN_WIDTH_34_DP"
            android:layout_height="@dimen/DIMEN_WIDTH_34_DP"
            android:src="@mipmap/search"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/DIMEN_WIDTH_15_DP"/>
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="寻找投资机构名称/项目签名"
            android:textSize="@dimen/DIMEN_TEXT_28_SP"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>